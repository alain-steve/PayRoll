@model EmployeeCreateViewModel


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Employee" asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">New Employee</li>
                </ol>
            </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="EmployeeNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="EmployeeNo" class="form-control" placeholder="EMP000" />
                        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="DateJoined"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DateJoined" class="form-control" placeholder="EMP000" />
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name..." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="MiddleName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="MiddleName" class="form-control" placeholder="Middle Name..." />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name..." />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-check col-md-2">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select class="form-control" asp-for="Gender">
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                        @*<input asp-for="Gender" type="radio" value="Male" />Male
                            <input asp-for="Gender" type="radio" value="Female" />Female*@
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="DOB"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DOB" class="form-control" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="NationalInsuranceNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NationalInsuranceNo" class="form-control" placeholder="National Insurance Numbe..." />
                        <span asp-validation-for="NationalInsuranceNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="PhoneNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PhoneNo" class="form-control" placeholder="Phone Number..." />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="PaymentMethod"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PaymentMethod" class="form-control"
                                asp-items="Html.GetEnumSelectList<PayRoll.Entity.PaymentMethod>()"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="StudentLoan"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="StudentLoan" class="form-control"
                                asp-items="Html.GetEnumSelectList<PayRoll.Entity.StudentLoan>()"></select>
                        <span asp-validation-for="StudentLoan" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="UnionMember"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="UnionMember" class="form-control"
                                asp-items="Html.GetEnumSelectList<PayRoll.Entity.UnionMember>()"></select>
                        <span asp-validation-for="UnionMember" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Designation"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Designation" class="form-control" placeholder="Role..." />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="PostCode"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PostCode" class="form-control" placeholder="Post Code..." />
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Address" class="form-control" placeholder="Address..." />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="City"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-1">
                    <label asp-for="ImageUrl"></label>
                </div>
                <div class="form-group col-md-4">
                    <div class="btn btn-primary btn-icon-text">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <input asp-for="ImageUrl" type="file" value="Upload" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div><br /><br />

                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left">
                        <i class="fas fa-plus-square" style="margin-right:0.7em"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-rounded btn-success float-right">
                        <i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back
                    </a>
                    <br />
                </div>
            </form>

        </div>
    </div>
</div>
<br /><br />

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
